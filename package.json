  "author": "Code Atlantic LLC",
  "license": "MIT",
  "homepage": "https://resurgo.app",
  "bugs": {
    "url": "https://github.com/code-atlantic/resurgo-mcp/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/code-atlantic/resurgo-mcp"
  },
  "files": [
    "build",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "typescript": "^5.9.3"
